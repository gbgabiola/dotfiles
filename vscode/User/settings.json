{
  /**
   * ******************************
   * GENERAL CONFIG
   * ******************************
   */
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": true,
  "editor.cursorBlinking": "blink",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.fontFamily": "FiraCode NFM", // "MesloLGS NF", "Fira Code", "Hack Nerd Font Mono"
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.guides.bracketPairs": true,
  "editor.letterSpacing": 0,
  "editor.lineHeight": 19,
  "editor.matchBrackets": "always",
  "editor.mouseWheelZoom": false,
  "editor.multiCursorModifier": "alt",
  "editor.parameterHints.enabled": false,
  "editor.quickSuggestionsDelay": 30,
  "editor.rulers": [80, 100],
  "editor.scrollBeyondLastLine": true,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "top", // "top" to show snippets before any other auto completion or use inline
  "editor.tabSize": 2,
  "editor.useTabStops": true, // -1
  "editor.wordWrap": "on",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": false,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,
  "html.format.preserveNewLines": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "markdown.extension.toc.levels": "2..2", // "1..6"
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono", // "MesloLGMDZ NFM"
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.external.windowsExec": "C:\\Users\\genesis\\AppData\\Local\\Microsoft\\WindowsApps\\wt.exe",
  "update.mode": "manual",
  "window.closeWhenEmpty": true,
  "window.openFilesInNewWindow": "off",
  "workbench.colorTheme": "Dracula",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "ui",
  "workbench.startupEditor": "newUntitledFile",

  /**
   * ******************************
   * WEB CONFIG
   * ******************************
   */
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
    // "ejs": "html"
    // "hbs": "html"
    // "typescript": "html",
    // "markdown": "html",
    // "erb": "html",
    // "jsx": "html",
  },

  /**
   * ******************************
   * AUTO-SAVE CONFIGS
   * ******************************
   */
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  // tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "files.trimTrailingWhitespace": false
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[php]": {
    "editor.formatOnSave": false
  },
  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  // "[javascript]": {
  //   // turn it off for JS and JSX, we will do this via eslint
  //   "editor.formatOnSave": false,
  //   "editor.defaultFormatter": "esbenp.prettier-vscode" // or null
  // },
  // "[javascriptreact]": {
  //   "editor.formatOnSave": false,
  //   "editor.defaultFormatter": "esbenp.prettier-vscode" // or null
  // },
  "eslint.validate": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact"
  ],
  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "files.associations": {
    "*.module": "php",
    "*.ejs": "html"
    // "*.js": "javascriptreact"
  },
  "explorer.confirmDragAndDrop": false,
  "gitlens.defaultDateLocale": null,
  "gitlens.hovers.currentLine.over": "line",
  "html.format.enable": false,
  // "mssql.connections": [
  //   {
  //     "server": "127.0.0.1",
  //     "database": "",
  //     "authenticationType": "SqlLogin",
  //     "user": "sa",
  //     "password": "",
  //     "emptyPasswordInput": false,
  //     "savePassword": true
  //   }
  // ],
  "diffEditor.ignoreTrimWhitespace": false
